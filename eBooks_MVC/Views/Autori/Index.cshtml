@model IEnumerable<eBooks_MVC.Models.AutorViewModel>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Nume autor</th>
            <th>Țara</th>
            <th>Data nașterii</th>
            <th>Acțiuni</th> 
        </tr>
    </thead>
    <tbody>
        @foreach (var autor in Model)
        {
            <tr>
                <td>@autor.nume_autor</td>
                <td>@autor.tara_origine</td>
                <td>@autor.data_nasterii.ToShortDateString()</td>
                <td>
                    @Html.ActionLink("Detalii", "Details", new { id = autor.id_autor }, new { @class = "btn btn-info btn-sm" })
                    @Html.Raw(" ")
                    @Html.ActionLink("Editează", "Edit", new { id = autor.id_autor }, new { @class = "btn btn-warning btn-sm" })
                    @Html.Raw(" ")
                    @Html.ActionLink("Șterge", "Delete", new { id = autor.id_autor }, new { @class = "btn btn-danger btn-sm" })
                </td>
            </tr>
        }
    </tbody>
</table>
