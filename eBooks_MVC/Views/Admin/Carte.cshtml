@model IEnumerable<eBooks_MVC.Models.CarteViewModel>

@{
    ViewBag.Title = "Gestionare Carti";
}

<h2>Gestionare Carti</h2>

<p>
    @Html.ActionLink("Adauga carte noua", "CreateCarte", null, new { @class = "btn btn-primary" })
    @Html.ActionLink("Inapoi la Panou Admin", "Index", null, new { @class = "btn btn-default" })
</p>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>Titlu</th>
            <th>Autor</th>
            <th>Categorie</th>
            <th>Serie / Volum</th>
            <th>Descriere</th>
            <th>Actiuni</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var carte in Model)
        {
            <tr>
                <td>@carte.id_carte</td>
                <td>@carte.titlu</td>
                <td>@carte.nume_autor</td>
                <td>@(string.IsNullOrEmpty(carte.nume_categorie) ? "-" : carte.nume_categorie)</td>
                <td>
                    @if (!string.IsNullOrEmpty(carte.nume_serie))
                    {
                        <text>@carte.nume_serie</text>
                        if (carte.nr_volum.HasValue)
                        {
                            <text> - Vol. @carte.nr_volum</text>
                        }
                    }
                    else
                    {
                        <text>-</text>
                    }
                </td>
                <td>@(string.IsNullOrEmpty(carte.descriere) ? "-" : (carte.descriere.Length > 50 ? carte.descriere.Substring(0, 50) + "..." : carte.descriere))</td>
                <td>
                    @Html.ActionLink("Editeaza", "EditCarte", new { id = carte.id_carte }, new { @class = "btn btn-warning btn-sm" })
                    @Html.Raw(" ")
                    @Html.ActionLink("Sterge", "DeleteCarte", new { id = carte.id_carte }, new { @class = "btn btn-danger btn-sm" })
                </td>
            </tr>
        }
    </tbody>
</table>

